<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Class.MedicineCategoryActivity">

    <FrameLayout
        android:id="@+id/toolbarMedicineCategory"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/background_toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/backInMedicineCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_chevron_left_black_24dp"
                android:background="#FFFFFF"/>

            <TextView
                android:id="@+id/textMedicineCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="@string/obat"
                android:textSize="24dp"
                android:textColor="#000000"
                android:fontFamily="@font/roboto_medium"/>

        </RelativeLayout>
    </FrameLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/searchMedicine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarMedicineCategory"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="18dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:hintEnabled="true"
        app:hintAnimationEnabled="false"
        android:hint="@string/searchMedicine"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_search_gray">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listItemMedicine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchMedicine"/>

</RelativeLayout>