<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/store_photo"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/foto_toko_1"/>

        <RelativeLayout
            android:id="@+id/store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/store_photo"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="13dp">

            <ImageView
                android:id="@+id/ic_store_name"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:src="@drawable/ic_store_name"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/text_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ic_store_name"
                android:layout_marginLeft="3dp"
                android:text="Toko Shamila"
                android:textSize="13dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/store_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/store_photo"
            android:layout_below="@id/store_name"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="13dp">

            <ImageView
                android:id="@+id/ic_store_location"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:src="@drawable/ic_store_location"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/text_store_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ic_store_location"
                android:layout_marginLeft="3dp"
                android:text="1,3"
                android:textSize="13dp"/>

            <TextView
                android:id="@+id/unit_store_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/text_store_location"
                android:layout_marginLeft="5dp"
                android:text="Km"
                android:textSize="13dp"/>

        </RelativeLayout>

        <RatingBar
            android:id="@+id/ratingKios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/store_location"
            android:layout_toRightOf="@id/store_photo"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="3dp"
            style="?android:attr/ratingBarStyleSmall"
            android:isIndicator="true"
            android:rating="3.5"
            android:stepSize="0.5"
            android:progressTint="@color/colorPrimary"
            android:progressBackgroundTint="#DADADA"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ButtonLihat"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="31dp"
            android:layout_marginRight="16dp"
            android:text="Lihat"
            android:textAllCaps="false"
            android:textSize="16dp"/>

</RelativeLayout>